extends ../layout_email
block body
  div(style="padding: 25px; margin-top:10px; background-color: #14acc2; border-top-left-radius: 6px; border-top-right-radius: 6px; border: 1px solid #0c8da0;")
    h2(style="text-align: center; color: #ffffff; margin:0px; font-size: 34px;") Confirm your email
  div(style="background-color: #ffffff; padding: 25px; margin-bottom: 25px; color: #303030; border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border: 1px solid #cccccc;")
    p(style="margin-bottom: 35px;") 
      | Welcome,  
      =firstName
    p Click the link below to confirm the email address for your account:
    p(style="margin-bottom: 35px;")
      a(style="color: #14acc2" href=baseUrl+'/auth/confirm-email?token='+encodeURIComponent(token))
        =baseUrl+'/auth/confirm-email?token='+encodeURIComponent(token)
