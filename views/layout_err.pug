    style(type="text/css").
      html {
        overflow:hidden;
      }
      body {
        background-color: mistyrose;
        color: #666;
        text-align: center;
        font-family: helvetica, sans-serif;
        overflow:hidden;
        position:absolute;
        top:0;
        left:0;
        right:0;
        bottom:0;
        margin:0;
      }
      div#dialog {
        position:absolute;
        top:80px;
        left:0;
        right:0;
      }
      div#dialog > div{
        background-color: #fff;
        padding: 0 2em;
        margin: 4em 1em 0 1em;
        border:1px solid #ccc;
        border-radius:10px;
        -webkit-border-radius: 10px;
        -webkit-box-shadow: 0px 3px 5px #333;
        box-shadow: 0px 3px 5px #333;
        -webkit-transform-origin: 10% 20%; /* Safari and Chrome */
        transform-origin: 10% 20%; /* IE */
      }
      h1 {
        font-size:1.4em;
        color:#f00;
        text-shadow: #ddd 0.0em 0.1em;
      }
      #notice {
        padding: 4em 2em;
        text-shadow: #fff 0.0em 0.1em;
      }
      h2 {
        margin:0 1em;
      }
      a#bug {
        text-decoration:none;
      }
  body
