include ../mixins/logo.pug
include ../mixins/flash.pug
doctype html
html(lang="en")
  head
    <!-- Required meta tags -->
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    block metas

    <!-- Bootstrap CSS -->
    if locals.title 
      title= title
    else
      title New Application
    
    // STYLES
    // STYLES END

    // SCRIPTS
    // SCRIPTS END

    // VIEW STYLES
    // VIEW STYLES END

    // VIEW SCRIPTS
    // VIEW SCRIPTS END
  body
    block navmenu
      nav.navbar.navbar-expand-lg.navbar-dark.py-0.fixed-top.bg-dark.md-transition#top-nav
        a.navbar-brand(href="/" aria-label="App")
          +logo(1)
    .main-page
      .container-fluid.pt-5
        .row.pt-5
          .col-1.col-md-3.col-sm-2.col-lg-4
          .col-10.col-md-6.col-sm-8.col-lg-4
            .display-4.text-center Password Recovery.
            .text-center Please enter the email address on the account you are trying to access:
            form.m-2(method="POST" action="/auth/send-reset-email" novalidate)
              .form-group
                label(for="exampleDropdownFormEmail1") Email address
                input.form-control#login-email(type="email" name="email" placeholder="email@example.com")
              button.btn.btn-dark#login-button(type="submit") Send Password Reset Email
        .row
          .col-1.col-md-3.col-sm-2.col-lg-4
          .col-10.col-md-6.col-sm-8.col-lg-4
            +flash()
